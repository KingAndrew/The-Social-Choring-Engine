<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>SocialChore</display-name>
	<filter>
		<filter-name>oauth</filter-name>
		<filter-class>com.sun.identity.oauth.filter.OAuthServletFilter</filter-class>
		<init-param>
			<param-name>realm</param-name>
			<param-value>http://www.example.com/</param-value>
		</init-param>
		<init-param>
			<param-name>consumerKeyPattern</param-name>
			<param-value>http://localhost:8080/SocialChore/consumer/.*</param-value>
		</init-param>
		<init-param>
			<param-name>accessTokenPattern</param-name>
			<param-value>http://localhost:8080/SocialChore/atoken/.*</param-value>
		</init-param>
		<init-param>
			<param-name>maxAge</param-name>
			<param-value>300000</param-value>
		</init-param>
		<init-param>
			<param-name>gcPeriod</param-name>
			<param-value>100</param-value>
		</init-param>
		<init-param>
			<param-name>nonceIndex</param-name>
			<param-value>accessToken</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>oauth</filter-name>
		<url-pattern>/oauth/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>com.socialchoring.rest</param-value>
		</init-param>
		<!--init-param> <param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name> 
			<param-value>com.socialchoring.rest.SecurityFilter</param-value> </init-param> -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<!-- servlet>
		<servlet-name>GetPlayersForAccountOAUTH</servlet-name>
		<servlet-class>com.socialchoring.test.RestTest</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetPlayersForAccountOAUTH</servlet-name>
		<url-pattern>/GetPlayersForAccountOAUTH</url-pattern>
	</servlet-mapping -->
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>